{
  "name": "@interchainjs/amino",
  "version": "1.19.2",
  "description": "Helpers for Amino based signing.",
  "contributors": [
    "Simon Warta <webmaster128@users.noreply.github.com>"
  ],
  "license": "Apache-2.0",
  "main": "index.js",
  "module": "esm/index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./index.js",
      "types": "./index.d.ts"
    },
    "./*": {
      "import": "./esm/*.js",
      "require": "./*.js",
      "types": "./*.d.ts"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperweb-io/interchainjs/tree/main/packages/amino"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "test": "jest --config ./jest.config.js --verbose --bail",
    "build": "makage build",
    "build:dev": "makage build",
    "lint": "eslint . --fix",
    "prepack": "makage build"
  },
  "dependencies": {
    "@interchainjs/crypto": "workspace:*",
    "@interchainjs/encoding": "workspace:*",
    "@interchainjs/math": "workspace:*",
    "@interchainjs/utils": "workspace:*"
  },
  "devDependencies": {
    "makage": "^0.1.12"
  }
}
