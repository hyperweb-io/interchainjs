{
  "name": "@interchainjs/math",
  "version": "1.18.1",
  "description": "Math helpers for blockchain projects",
  "contributors": [
    "IOV SAS <admin@iov.one>"
  ],
  "license": "MIT",
  "main": "index.js",
  "module": "esm/index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./index.js",
      "types": "./index.d.ts"
    },
    "./*": {
      "import": "./esm/*.js",
      "require": "./*.js",
      "types": "./*.d.ts"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperweb-io/interchainjs/tree/main/packages/math"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "test": "jest --config ./jest.config.js --verbose --bail",
    "build": "makage build",
    "build:dev": "makage build",
    "lint": "eslint . --fix",
    "prepack": "makage build"
  },
  "dependencies": {
    "bn.js": "^5.2.0"
  },
  "devDependencies": {
    "@types/bn.js": "^5.2.0",
    "makage": "^0.1.12"
  }
}
