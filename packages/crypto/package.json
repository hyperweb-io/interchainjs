{
  "name": "@interchainjs/crypto",
  "version": "1.20.0",
  "description": "Cryptography resources for blockchain projects",
  "contributors": [
    "IOV SAS <admin@iov.one>",
    "Simon Warta"
  ],
  "license": "MIT",
  "main": "index.js",
  "module": "esm/index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./index.js",
      "types": "./index.d.ts"
    },
    "./*": {
      "import": "./esm/*.js",
      "require": "./*.js",
      "types": "./*.d.ts"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperweb-io/interchainjs/tree/main/packages/crypto"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "test": "jest --config ./jest.config.js --verbose --bail",
    "build": "makage build",
    "build:dev": "makage build",
    "lint": "eslint . --fix",
    "prepack": "makage build"
  },
  "dependencies": {
    "@interchainjs/encoding": "workspace:*",
    "@interchainjs/math": "workspace:*",
    "@interchainjs/utils": "workspace:*",
    "@noble/hashes": "^1",
    "bn.js": "^5.2.0",
    "elliptic": "^6.5.4",
    "libsodium-wrappers-sumo": "^0.8.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.2.0",
    "@types/elliptic": "^6.4.18",
    "@types/libsodium-wrappers-sumo": "^0.8.2",
    "makage": "^0.1.12"
  }
}
