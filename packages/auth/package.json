{
  "name": "@interchainjs/auth",
  "version": "1.20.0",
  "description": "Authentication for web3 accounts",
  "main": "index.js",
  "module": "esm/index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./index.js",
      "types": "./index.d.ts"
    },
    "./*": {
      "import": "./esm/*.js",
      "require": "./*.js",
      "types": "./*.d.ts"
    },
    "./package.json": "./package.json"
  },
  "author": "Constructive <developers@constructive.io>",
  "homepage": "https://github.com/hyperweb-io/interchainjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperweb-io/interchainjs"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "build": "makage build",
    "build:dev": "makage build",
    "lint": "eslint . --fix",
    "test": "jest --config ./jest.config.js --verbose --bail",
    "prepack": "makage build"
  },
  "dependencies": {
    "@interchainjs/crypto": "workspace:*",
    "@interchainjs/types": "workspace:*",
    "@interchainjs/utils": "workspace:*",
    "@noble/curves": "^1.1.0",
    "@noble/hashes": "^1.3.1",
    "@scure/bip32": "^1.0.10",
    "bech32": "^2.0.0",
    "elliptic": "^6.5.4",
    "libsodium-wrappers-sumo": "^0.8.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0",
    "@types/elliptic": "^6.4.18",
    "@types/libsodium-wrappers-sumo": "^0.8.2",
    "makage": "^0.1.12"
  },
  "keywords": [
    "cryptography",
    "secp256k1",
    "ed25519",
    "wallet"
  ]
}
